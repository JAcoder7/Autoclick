{
    "manifest_version": 3,
    "name": "Autoclick",
    "version": "1.0",
    "description": "Automatically click elements like popup close buttons",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}